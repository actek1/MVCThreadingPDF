@{
    ViewBag.Title = "About";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<p>Use this area to provide additional information.</p>

<div id="NavBar_OptionPanel">
    <button id="test">
        Procesar
    </button>
    <br />
    <button id="btnPdf">
        PDF
    </button>
    <div>
        <label for="name">Name:</label>
        <input type="text" name="name" /><br>
        <label for="language">Do you speak English fluently?</label>
        <input type="checkbox" onclick="checkFluency()" id="fluency" />
    </div>
</div>
@section Scripts {
    <script type="text/javascript">
        function checkFluency()
        {
            var checkbox = document.getElementById('fluency');
            if (checkbox.checked == true)
            {
                //Aqui mandas llamar funcion
                alert("you need to be fluent in English to apply for the job");
            }
        }
            $(document).ready(function () {
                $("#test").click(function ()
                {
                    var myArray = ["Saab", "Volvo", "BMW"];
                    $.ajax({
                        type: "POST",
                        traditional: true,
                        async: false,
                        cache: false,
                        url: '/Home/AllProcess',
                        context: document.body,
                        data: { msg: myArray },
                        success: function (result) {
                            alert(result);
                        },
                        error: function (xhr) {
                            //debugger;  
                            console.log(xhr.responseText);
                            alert("Error has occurred..");
                        }
                    });  
                });
                $("#btnPdf").click(function () {
                    $.ajax({
                        type: "POST",
                        traditional: true,
                        async: false,
                        cache: false,
                        url: '/Home/GeneratePDF',
                        context: document.body,
                        //data: { msg: myArray },
                        success: function (result) {
                            alert(result);
                        },
                        error: function (xhr) {
                            //debugger;  
                            console.log(xhr.responseText);
                            alert("Error has occurred..");
                        }
                    });
                });
                
            });
    </script>
}